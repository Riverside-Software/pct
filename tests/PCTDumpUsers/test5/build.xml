<?xml version="1.0"?>
<project name="PCTDumpUsers-test5">
  <property environment="env" />
  <taskdef resource="PCT.properties" />
  <property name="cpstream" value="iso8859-1" />

	<target name="echoprops">
	    <echoproperties />
	</target>

  <target name="base">
    <mkdir dir="db" />
    <PCTCreateBase dbName="test" destDir="db" dlcHome="${env.DLC}" schemaFile="schema.df" />
    <PCTLoadUsers destFile="basic_user.d" dlcHome="${env.DLC}" cpstream="${cpstream}">
      <PCTConnection dbName="test" dbDir="db" singleUser="true" />
    </PCTLoadUsers>
  </target>

  <target name="test">
    <mkdir dir="foo" />
    <PCTDumpUsers destFile="foo/_user.d" dlcHome="${env.DLC}" cpstream="${cpstream}">
      <PCTConnection dbName="test" dbDir="db" singleUser="true" />
    </PCTDumpUsers>
  </target>

</project>
