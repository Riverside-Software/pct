<?xml version="1.0"?>
<project name="PCTLoadData-test7">
  <taskdef resource="PCT.properties" />

  <target name="base">
    <mkdir dir="db" />
    <PCTCreateBase dbName="test1" destDir="db" dlcHome="${DLC}" schemaFile="schema.df" />
    <PCTCreateBase dbName="test2" destDir="db" dlcHome="${DLC}" schemaFile="schema.df" />
    <PCTCreateBase dbName="test3" destDir="db" dlcHome="${DLC}" schemaFile="schema.df" />
    <PCTCreateBase dbName="test4" destDir="db" dlcHome="${DLC}" schemaFile="schema.df" />
  </target>

  <target name="load-noerror">
    <PCTLoadDataCallback dlcHome="${DLC}" srcFile="data/Tab1.d" table="tab1" numsep="44" numdec="46" centuryYearOffset="1920">
      <DBConnection dbName="test1" dbDir="db" singleUser="true" />
      <Profiler enabled="${PROFILER}" coverage="true" outputDir="profiler" />
      <Option name="-d" value="dmy" />
    </PCTLoadDataCallback>
    <PCTLoadDataCallback dlcHome="${DLC}" errorPercentage="0" srcFile="data/Tab1.d" table="tab1" numsep="44" numdec="46" centuryYearOffset="1920">
      <DBConnection dbName="test2" dbDir="db" singleUser="true" />
      <Profiler enabled="${PROFILER}" coverage="true" outputDir="profiler" />
      <Option name="-d" value="dmy" />
    </PCTLoadDataCallback>
  </target>

  <target name="load-error1">
    <PCTLoadDataCallback dlcHome="${DLC}" errorPercentage="30" srcFile="data/Tab2.d" table="tab1" numsep="44" numdec="46" centuryYearOffset="1920">
      <DBConnection dbName="test3" dbDir="db" singleUser="true" />
      <Profiler enabled="${PROFILER}" coverage="true" outputDir="profiler" />
      <Option name="-d" value="dmy" />
    </PCTLoadDataCallback>
  </target>

  <target name="load-error2">
    <PCTLoadDataCallback dlcHome="${DLC}" errorPercentage="60" srcFile="data/Tab2.d" table="tab1" numsep="44" numdec="46" centuryYearOffset="1920">
      <DBConnection dbName="test4" dbDir="db" singleUser="true" />
      <Profiler enabled="${PROFILER}" coverage="true" outputDir="profiler" />
      <Option name="-d" value="dmy" />
    </PCTLoadDataCallback>
  </target>

</project>
