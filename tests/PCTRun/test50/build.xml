<?xml version="1.0"?>
<project name="PCTRun-test50">
  <taskdef resource="PCT.properties" />

  <target name="init">
    <mkdir dir="build" />
    <mkdir dir="xcode" />
    <mkdir dir="profiler" />
    <PCTCompile destDir="build" dlcHome="${DLC}">
      <fileset dir="src" />
    </PCTCompile>
    <PCTXCode destDir="xcode" dlcHome="${DLC}">
      <fileset dir="src" />
    </PCTXCode>
  </target>

  <target name="testrr1">
    <PCTDynRun procedure="test.p" dlcHome="${DLC}" clientMode="rr">
      <propath location="build" />
      <Profiler enabled="true" coverage="true" outputDir="profiler" />
    </PCTDynRun>
  </target>
  <target name="testrr2">
    <PCTDynRun procedure="test.p" dlcHome="${DLC}" clientMode="rr">
      <propath location="xcode" />
      <Profiler enabled="true" coverage="true" outputDir="profiler" />
    </PCTDynRun>
  </target>
  <target name="testrr3">
    <PCTDynRun procedure="test.p" dlcHome="${DLC}" clientMode="rr">
      <propath location="src" />
      <Profiler enabled="true" coverage="true" outputDir="profiler" />
    </PCTDynRun>
  </target>

  <target name="testrx1">
    <PCTDynRun procedure="test.p" dlcHome="${DLC}" clientMode="rx">
      <propath location="build" />
      <Profiler enabled="true" coverage="true" outputDir="profiler" />
    </PCTDynRun>
  </target>
  <target name="testrx2">
    <PCTDynRun procedure="test.p" dlcHome="${DLC}" clientMode="rx">
      <propath location="xcode" />
      <Profiler enabled="true" coverage="true" outputDir="profiler" />
    </PCTDynRun>
  </target>
  <target name="testrx3">
    <PCTDynRun procedure="test.p" dlcHome="${DLC}" clientMode="rx">
      <propath location="src" />
      <Profiler enabled="true" coverage="true" outputDir="profiler" />
    </PCTDynRun>
  </target>

  <target name="testrg1">
    <PCTDynRun procedure="test.p" dlcHome="${DLC}" clientMode="rx">
      <propath location="build" />
