<?xml version="1.0"?>
<project name="PCTBinaryLoad-test4">
  <taskdef resource="PCT.properties" />

  <target name="base">
    <mkdir dir="db" />
    <PCTCreateBase dbName="test" destDir="db" dlcHome="${DLC}" schemaFile="schema.df" />
  </target>

  <target name="load">
    <PCTBinaryLoad dlcHome="${DLC}">
      <PCTConnection dbName="test" dbDir="db" singleUser="true" />
      <fileset dir="data">
          <include name="*.bd"/>
      </fileset>
    </PCTBinaryLoad>
  </target>

  <target name="test">
    <PCTRun procedure="src/test.p" dlcHome="${DLC}" cpinternal="iso8859-1" cpstream="iso8859-1">
      <PCTConnection dbName="test" dbDir="db" singleUser="true" />
    </PCTRun>
  </target>

</project>
