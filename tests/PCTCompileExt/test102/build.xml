<?xml version="1.0"?>
<project name="PCTCompile-test102">
  <taskdef resource="PCT.properties" />

  <target name="test">
    <mkdir dir="build" />
    <PCTCompileExt graphicalMode="false" destDir="build" dlcHome="${DLC}">
      <fileset dir="src">
        <include name="**/*.p" />
        <include name="**/*.t" />
      </fileset>
      <compositemapper>
        <regexpmapper from="^(.*)\.p$$" to="\1renamed.r" />
        <regexpmapper from="^(.*)\.t$$" to="triggers/\1.r" />
      </compositemapper>
    </PCTCompileExt>
  </target>

</project>
