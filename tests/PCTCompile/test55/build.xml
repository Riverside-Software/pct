<?xml version="1.0"?>
<project name="PCTCompile-test55">
  <taskdef resource="PCT.properties" />

  <target name="test1">
    <mkdir dir="build1" />
    <PCTCompile destDir="build1" dlcHome="${DLC}">
      <fileset dir="src" includes="*.p" />
      <propath location="src" />
      <Profiler enabled="${PROFILER}" coverage="true" outputDir="profiler" />
    </PCTCompile>
  </target>

  <target name="test2">
    <mkdir dir="build2" />
    <mkdir dir="xref2" />
    <PCTCompile destDir="build2" dlcHome="${DLC}" xrefDir="xref2">
      <fileset dir="src" includes="*.p" />
      <propath location="src" />
      <Profiler enabled="${PROFILER}" coverage="true" outputDir="profiler" />
    </PCTCompile>
  </target>

  <target name="test3">
    <mkdir dir="build3" />
    <mkdir dir="xref3" />
    <PCTCompile destDir="build3" dlcHome="${DLC}" xrefDir="xref3">
      <fileset dir="src" includes="**/*.p" />
      <propath location="src" />
      <Profiler enabled="${PROFILER}" coverage="true" outputDir="profiler" />
      <!-- In order to force pctBgCompile -->
      <chainedmapper>
        <flattenmapper />
        <regexpmapper from="^(.*)\.(.*)$$" to="\1.r"/>
      </chainedmapper>
    </PCTCompile>
  </target>

  <target name="test4">
    <PCTCompile destDir="src" dlcHome="${DLC}">
      <fileset dir="src" includes="**/*.p" />
      <propath location="src" />
      <Profiler enabled="${PROFILER}" coverage="true" outputDir="profiler" />
      <!-- In order to force pctBgCompile -->
      <chainedmapper>
        <flattenmapper />
        <regexpmapper from="^(.*)\.(.*)$$" to="\1.r"/>
      </chainedmapper>
    </PCTCompile>
  </target>

</project>
