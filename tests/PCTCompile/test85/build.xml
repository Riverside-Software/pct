<?xml version="1.0"?>
<project name="PCTCompile-test85">
  <taskdef resource="PCT.properties" />

  <target name="test1">
    <PCTCompile destDir="build" dlcHome="${DLC}" relativePaths="true" displayFiles="1">
      <fileset dir="src" includes="*.p" />
      <propath location="src" />
      <Profiler description="PCTCompile-test85" enabled="${PROFILER}" coverage="true" outputDir="profiler" />
    </PCTCompile>
  </target>

  <target name="test2">
    <sleep milliseconds="1000" />
    <touch file="src/test.p" />
    <touch file="src/test2.p" />
    <PCTCompile destDir="build" dlcHome="${DLC}" relativePaths="true" displayFiles="1">
      <filelist dir="src" files="test.p,test2.p" />
      <propath location="src" />
      <Profiler description="PCTCompile-test85" enabled="${PROFILER}" coverage="true" outputDir="profiler" />
    </PCTCompile>
  </target>

  <target name="test3">
    <sleep milliseconds="1000" />
    <touch file="src/test.i" />
    <touch file="src/test2.i" />
    <PCTCompile destDir="build" dlcHome="${DLC}" relativePaths="true" displayFiles="1">
      <filelist dir="src" files="test.p,test2.p" />
      <propath location="src" />
      <Profiler description="PCTCompile-test85" enabled="${PROFILER}" coverage="true" outputDir="profiler" />
    </PCTCompile>
  </target>

  <target name="test4-pre">
    <PCTCompile destDir="build2" dlcHome="${DLC}" relativePaths="false">
      <filelist dir="src" files="test.p,test2.p" />
      <propath location="src" />
      <Profiler description="PCTCompile-test85" enabled="${PROFILER}" coverage="true" outputDir="profiler" />
    </PCTCompile>
  </target>

  <target name="test4">
    <move file="src" tofile="src2" />
    <PCTCompile destDir="build2" dlcHome="${DLC}" relativePaths="false" displayFiles="1">
      <filelist dir="src2" files="test.p,test2.p" />
      <propath location="src2" />
      <Profiler description="PCTCompile-test85" enabled="${PROFILER}" coverage="true" outputDir="profiler" />
    </PCTCompile>
  </target>

</project>
