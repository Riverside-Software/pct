<?xml version="1.0"?>
<project name="PCTCompile-test30">
  <taskdef resource="PCT.properties" />
  
  <target name="test">
  	<mkdir dir="build" />
  	<PCTCompile graphicalMode="false" destDir="build" dlcHome="${DLC}" debugPCT="true">
      <filelist dir="src" files="test1.p,test3.p,test4.p" />
    </PCTCompile>
  </target>

  <target name="test2">
    <mkdir dir="build2" />
    <PCTCompile graphicalMode="false" destDir="build2" dlcHome="${DLC}" >
      <zipfileset src="tests.zip" includes="*.p" />
    </PCTCompile>
  </target>

  <target name="test3">
  	<mkdir dir="build" />
    <filelist id="foobar" dir="src" files="test2.p" />
  	<PCTCompile graphicalMode="false" destDir="build" dlcHome="${DLC}" debugPCT="true">
      <filelist refid="foobar" />
    </PCTCompile>
  </target>

  <target name="test4">
  	<mkdir dir="build" />
  	<PCTCompile graphicalMode="false" destDir="build" dlcHome="${DLC}" debugPCT="true" verbose="true">
      <dirset dir="." includes="src" />
    </PCTCompile>
  </target>

  <target name="test5">
  	<mkdir dir="build" />
  	<PCTCompile graphicalMode="false" destDir="build" dlcHome="${DLC}" debugPCT="true">
      <filelist dir="src" files="test1.p" />
      <fileset dir="src" includes="*2.p" />
      <filelist dir="src" files="test3.p" />
    </PCTCompile>
  </target>

  <target name="test6">
  	<mkdir dir="build6" />
  	<PCTCompile graphicalMode="false" destDir="build6" dlcHome="${DLC}" debugPCT="true">
      <first>
        <filelist dir="src" files="test1.p,test3.p,test4.p" />
      </first>
    </PCTCompile>
  </target>

  <target name="test7">
  	<mkdir dir="build7" />
  	<PCTCompile graphicalMode="false" destDir="build7" dlcHome="${DLC}" debugPCT="true">
      <sort>
        <filelist dir="src" files="test3.p,test4.p,test1.p" />
        <reverse xmlns="antlib:org.apache.tools.ant.types.resources.comparators" />
      </sort>
    </PCTCompile>
  </target>

  <target name="test8">
  	<mkdir dir="build8" />
  	<PCTCompile graphicalMode="false" destDir="build8" dlcHome="${DLC}" verbose="true">
      <sort>
        <fileset dir="src" includes="*.p" />
        <natural xmlns="antlib:eu.rssw.pct" />
      </sort>
    </PCTCompile>
  </target>
	
</project>
