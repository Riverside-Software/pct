  <!-- Test simple recompile if file has changed (.r timestamp based) -->
  <target name="test7init">
  	<echo file="sandbox/temp.p">
      MESSAGE "Hello world".
  	</echo>
  </target>
  <target name="test7">
    <PCTCompile destDir="build" dlcHome="${env.DLC}">
