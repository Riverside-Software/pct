  <!-- Test deep includes -->
  <target name="test13init">
    <echo file="sandbox/temp.p">
      {sandbox/temp.i}.
      RETURN '0'.
    </echo>
    <echo file="sandbox/temp.i">
      MESSAGE "Hello".
      {sandbox/temp2.i}.
    </echo>
    <echo file="sandbox/temp2.i">
      MESSAGE "World".
    </echo>
  </target>
  <target name="test13">
