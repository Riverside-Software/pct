<?xml version="1.0"?>

<project name="PCTLibrary-test" default="">

  <taskdef resource="PCT.properties" classpath="."/>

  <property environment="env"/>
  
  <target name="test1">
    <PCTLibrary dlcHome="${env.DLC}"/>
  </target>
   
  <target name="test2">
    <PCTLibrary destFile="sandbox/test.pl" dlcHome="${env.DLC}"/>
  </target>
  
  <target name="test3">
  	<echo file="sandbox/test">
  		Empty file
    </echo>
    <PCTLibrary destFile="sandbox/test.pl" dlcHome="${env.DLC}">
      <fileset dir=".">
        <include name="sandbox/test"/>
      </fileset>
    </PCTLibrary>
  </target>

  <target name="test4pre">
  	<echo file="sandbox/test">
  		Empty file
    </echo>
    <PCTLibrary destFile="sandbox/test.pl" dlcHome="${env.DLC}">
      <fileset dir=".">
        <include name="sandbox/test"/>
      </fileset>
    </PCTLibrary>
  </target>
  <target name="test4">
    <touch file="sandbox/test"/>
    <PCTLibrary destFile="sandbox/test.pl" dlcHome="${env.DLC}">
      <fileset dir=".">
        <include name="sandbox/test"/>
      </fileset>
    </PCTLibrary>
  </target>
  
  <target name="test5">
  	<echo file="sandbox/test">
  		Empty file
  	</echo>
  	<echo file="sandbox/test2">
  		Empty file again
  	</echo>
  	<PCTLibrary destfile="sandbox/test.pl" dlcHome="${env.DLC}" noCompress="true">
  		<fileset dir=".">
  			<include name="sandbox/test"/>
  		</fileset>
  		<fileset dir=".">
  			<include name="sandbox/test2"/>
  		</fileset>
  	</PCTLibrary>
  </target>
  <target name="test5bis">
  	<PCTLibrary destfile="sandbox/test.pl" dlcHome="${env.DLC}" noCompress="false">
  		<fileset dir=".">
  			<include name="sandbox/test"/>
  		</fileset>
  		<fileset dir=".">
  			<include name="sandbox/test2"/>
  		</fileset>
  	</PCTLibrary>
  </target>
  
</project>
