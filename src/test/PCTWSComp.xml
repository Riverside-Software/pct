<?xml version="1.0"?>

<project name="PCTWSComp-test" default="">

  <taskdef resource="PCT.properties" classpath="."/>

  <property environment="env"/>
  
  <!-- Should throw BuildException : no dest dir -->
  <target name="test1">
    <PCTWSComp dlcHome="${DLC}"  />
  </target>
  
  <!-- Do nothing : should not hurt -->
  <target name="test2">
    <PCTWSComp destDir="build" dlcHome="${DLC}"  />
  </target>
  
  <!-- Simple compilation -->
  <target name="test3">
    <echo file="sandbox/simple.html">
      &lt;body&gt;
        &lt;script language="SpeedScript"&gt;
        DEFINE VARIABLE vdate AS DATE INITIAL TODAY.
        &lt;/script&gt;
        &lt;p&gt;Today : `vdate`&lt;/p&gt;
      &lt;/body&gt;
    </echo>
    <PCTWSComp destDir="build" dlcHome="${DLC}" >
      <fileset dir=".">
        <include name="sandbox/simple.html"/>	
      </fileset>	
    </PCTWSComp>	
  </target>
  <!-- And now with include directive -->
  <target name="test3-part2">
    <PCTWSComp destDir="build" dlcHome="${DLC}"  webObject="false">
      <fileset dir=".">
        <include name="sandbox/simple.html"/>	
      </fileset>	
    </PCTWSComp>	
  </target>
    
</project>
